@model HomeVM


<div class="col-12">
    <div class="card-header d-flex justify-content-center">
        <h5 class="mb-0">Service</h5>
    </div>
      <br />
    <div class="row justify-content-center">
        <div class="col-lg-3 col-md-4 col-sm-6 item-wrap">
            <div class="card">
                <div class="card-statistic-4">
                    <div class="align-items-center justify-content-between">
                        <div class="row ">
                            <div class="col-lg-12 text-center">
                                <h2 style="text-align: center;">Tours</h2>
                            </div>
                            <div class="col-lg-12 text-center" style="width: 100%; height:100%;">
                                <div >
                                    <img src="~/assets/img/@Model.Tour.Image" style="width: 100%; height: 100%;">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="carousel_item_text" style="text-align: center;">
                                    <div class="card-content">
                                        <h5>@Model.Tour.Name</h5>
                                        <p class="mb-3">@Model.Tour.StartDate.ToString("dd.MM.yyy") - @Model.Tour.EndDate.ToString("dd.MM.yyy")</p>
                                        <a asp-controller="Tours" asp-action="Index" class="btn btn-primary margin-10">View All</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 item-wrap">
            <div class="card">
                <div class="card-statistic-4">
                    <div class="align-items-center justify-content-between">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h2 style="text-align: center;">Hotel</h2>
                            </div>
                            <div class="col-lg-12 text-center" style="width: 100%; height:100%;">
                                <div>
                                    <img src="~/assets/img/@Model.Hotel.HotelImages.FirstOrDefault().Image" style="width: 100%; height: 100%;">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="carousel_item_text" style="text-align: center;">
                                    <div class="card-content">
                                        <h5>@Model.Tour.Name</h5>
                                        <p class="mb-3">@Model.Hotel.HotelDetail.CheckInTime.ToString("dd.MM.yyy") - @Model.Hotel.HotelDetail.CheckOutTime.ToString("dd.MM.yyy")</p>
                                        <a asp-controller="Hotels" asp-action="Index" class="btn btn-primary margin-10">View All</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 item-wrap">
            <div class="card">
                <div class="card-statistic-4">
                    <div class="align-items-center justify-content-between">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h2 style="text-align: center;">Airline Ticket</h2>
                            </div>
                            <div class="col-lg-12 text-center" style="width: 100%; height:100%;">
                                <div>
                                    <img src="~/assets/img/AirlineTicket.jpg" style="width: 72%; height: 100%;">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="carousel_item_text" style="text-align: center;">
                                    <div class="card-content">
                                        <h5>@Model.AirlineTicket.AirlineCompany</h5>
                                        <p class="mb-3">Departure Date: @Model.AirlineTicket.DepartureDateTime.ToString("dd.MM.yyy") </p>
                                        <a asp-controller="AirlineTickets" asp-action="Index" class="btn btn-primary margin-10">View All</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</div>

