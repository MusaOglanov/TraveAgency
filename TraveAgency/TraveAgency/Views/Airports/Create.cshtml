@model Airport
<div class="card-body">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Airport  Create</h5>
    </div>
    <form method="post" enctype="multipart/form-data">


        <div class="form-group">
            <label class="form-label" asp-for="Name">  Name</label>
            <input asp-for="Name" type="text" class="form-control text-uppercase">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Country"></label>
            <input asp-for="Country" type="text" class="form-control text-uppercase">
            <span class="text-danger" asp-validation-for="Country"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="City"></label>
            <input asp-for="City" type="text" class="form-control text-uppercase">
            <span class="text-danger" asp-validation-for="City"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Code"></label>
            <input asp-for="Code" type="text" class="form-control text-uppercase">
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>

        <a asp-action="index" class="btn btn-dark mr-2">Go Back</a>
        <button type="submit" class="btn btn-primary mr-2">Send</button>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}