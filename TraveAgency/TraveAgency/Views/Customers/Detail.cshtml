@model Customer
<div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Customer Detail</h5>
</div>

<div class="form-row">
    <div class="form-group col-md-4">
        <h6> Name</h6>
        <h4>@Model.Name</h4>
    </div>
    <div class="form-group col-md-4">
        <h6>Surname</h6>
        <h4>@Model.Surname</h4>
    </div>
    <div class="form-group col-md-4">
        <h6>Registration Date</h6>
        <h5>@Model.RegistrationDate.ToString("dd/MMM/yyyy")</h5>
    </div>
</div>
<div class="form-row ">
    <div class="form-group col-md-4">
        <h6>Mobile</h6>
        <h4>@Model.Mobile</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Email </h6>
        <h5>@Model.Email</h5>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <h6> City</h6>
        <h4>@Model.City </h4>
    </div>
    <div class="form-row col-md-3">
        <div class="form-group col-md-3" style="text-align:center">
            <h6 class="mb-4 text-md  ">Country</h6>
            <h5>@Model.Country</h5>
        </div>
    </div>
    <div class="form-row col-md-3">
        <div class="form-group col-md-3" style="text-align:center">
            <h6 class="mb-4 text-md  ">Adress</h6>
            <h5>@Model.Adress</h5>
        </div>
    </div>
</div>



<a asp-action="Index" class="btn btn-dark text-white">Go Back</a>

