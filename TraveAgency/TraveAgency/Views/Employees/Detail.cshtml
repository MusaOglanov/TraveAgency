@model Employee
<div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Employee Detail</h5>
</div>

<div class="form-row">
    <div class="form-group col-md-4">
        <h6>Full Name</h6>
        <h4>@Model.FullName</h4>
    </div>
    <div class="form-group col-md-4">
        <h6>Position</h6>
        <h4>@Model.Position.Name</h4>
    </div>
    <div class="form-group col-md-4">
        <h6>Birth Date</h6>
        <h5>@Model.Bithdate.ToString("dd/MMM/yyyy")</h5>
    </div>
</div>
<div class="form-row ">

    <div class="form-group col-md-4">
        <h6>Mobile</h6>
        <h4>@Model.Mobile</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Email </h6>
        <h5>@Model.Email</h5>
    </div>
    <div class="form-group col-md-4">
        <h6>Hire Date</h6>
        <h5>@Model.HireDate.ToString("dd/MMM/yyyy")</h5>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <h6> Salary </h6>
        <h4>@Model.Salary </h4>
    </div>
    <div class="form-row col-md-3">
        <div class="form-group col-md-3" style="text-align:center">
            <h6 class="mb-4 text-md  ">Notes</h6>
            <h5>@Model.Notes</h5>
        </div>
    </div>
</div>



<a asp-action="Index" class="btn btn-dark text-white">Go Back</a>

